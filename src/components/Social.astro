---
import IconAt from '../assets/icons/IconAt.astro';
import IconGithub from '../assets/social/IconGithub.astro'
import IconLikedin from '../assets/social/IconLikedin.astro'
import IconX from '../assets/social/IconX.astro'
import IconThreads from '../assets/social/IconThreads.astro'
---

<section id='social' class='w-full md:w-[720px] container mx-auto pb-20'>
  <h2 class='flex gap-2 items-center text-4xl md:text-5xl font-extrabold mb-8'>
    <IconAt class='size-10 md:size-12' /><span>Social</span>
  </h2>
  <nav class='w-full grid grid-cols-4 gap-2 md:gap-4'>
    <a
      class='col-span-2 md:col-span-1 border-2 bg-slate-900 border-slate-700 rounded-2xl p-4 text-center text-lg md:text-xl font-bold flex items-center gap-2 transition ease-in-out duration-300 hover:border-slate-600'
      href='https://twitter.com/MarioMontella_'
      target='_blank'><span><IconX class='size-5 md:size-8' /></span><span class='text-center'>Twitter</span></a
    >
    <a
      class='col-span-2 md:col-span-1 border-2 bg-slate-900 border-slate-700 rounded-2xl p-4 text-center text-lg md:text-xl font-bold flex items-center gap-2 transition ease-in-out duration-300 hover:border-slate-600'
      href='https://github.com/mariomontella'
      target='_blank'><span><IconGithub class='size-5 md:size-8' /></span><span class='text-center'>Github</span></a
    >
    <a
      class='col-span-4 md:col-span-1 text-blue-400 border-2 bg-slate-900 border-slate-700 rounded-2xl p-4 text-center text-lg md:text-xl font-bold flex items-center gap-2 transition ease-in-out duration-300 hover:border-slate-600'
      href='https://www.linkedin.com/in/mario-montella-54090b145/'
      target='_blank'><span><IconLikedin class='size-5 md:size-8' /></span><span class='text-center'>Likendin</span></a
    >
    <a
    class='col-span-2 md:col-span-1 border-2 bg-slate-900 border-slate-700 rounded-2xl p-4 text-center text-lg md:text-xl font-bold flex items-center gap-2 transition ease-in-out duration-300 hover:border-slate-600'
    href='https://www.threads.net/@networkmario.io'
    target='_blank'><span><IconThreads class='size-5 md:size-8' /></span><span class='text-center'>Threads</span></a
  >

  </nav>
</section>
